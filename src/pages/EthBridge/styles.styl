.largeButtonContainer {
  width: 270px
  height 100px

  background: #FFFFFF;
  box-shadow: 0px 10px 21px rgba(0, 173, 232, 0.13);
  border-radius: 4px;
  position relative

  opacity 0.6
  cursor pointer

  .imgToken {
    margin-right 6px
    margin-bottom 2px
  }

  &.active {
    opacity 1

    &:after {
      display block
      position absolute
      content ''
      width: 100%
      height 4px
      bottom 0

      background: linear-gradient(269.98deg, #69FABC -0.02%, #00ADE8 100%);
    }
  }

  .title {
    font-weight bold
  }

  .description {
    //text-align right
    //width 100%
    //margin-right 60px
  }
}

.actionItem {
  flex-direction column
  align-items center
  justify-content space-between
  height 270px
  width 250px
  background white
  padding 30px 20px
  border-radius 5px
  margin 20px
  text-align center
  cursor pointer

  &:hover {
    border 2px solid #00ade870
    transform scale(1.04)
  }

  img {
    // max-width 50px
    max-height 100px
  }
}
